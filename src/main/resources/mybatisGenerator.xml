<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
  <!-- 引入配置文件 -->
  <properties resource="init.properties"/>
  <!-- 指定数据连接驱动jar地址 -->
  <classPathEntry location="${jdbc.driver.path}"/>
  <!-- 一个数据库一个context -->
  <context id="infoGuardian">
    <!-- 注释 -->
    <commentGenerator>
      <property pascalName="suppressAllComments" value="false"/>
      <!-- 是否取消注释 -->
      <property pascalName="suppressDate" value="true"/>
      <!-- 是否生成注释代时间戳-->
    </commentGenerator>
    <!-- jdbc连接 -->
    <jdbcConnection driverClass="${jdbc.driver}" connectionURL="${jdbc.url}" userId="${jdbc.user}" password="${jdbc.password}"/>
    <!-- 类型转换 -->
    <javaTypeResolver>
      <!-- 是否使用bigDecimal， false可自动转化以下类型（Long, Integer, Short, etc.） -->
      <property pascalName="forceBigDecimals" value="false"/>
    </javaTypeResolver>
    <!-- 生成实体类地址 -->
    <javaModelGenerator targetPackage="${project.package}.entity" targetProject="${project.path}">
      <!-- 是否在当前路径下新加一层schema,eg：fase路径com.oop.eksp.user.model， true:com.oop.eksp.user.model.[schemaName] -->
      <property pascalName="enableSubPackages" value="false"/>
      <!-- 是否针对string类型的字段在set的时候进行trim调用 -->
      <property pascalName="trimStrings" value="true"/>
    </javaModelGenerator>
    <!-- 生成mapxml文件 -->
    <sqlMapGenerator targetPackage="mapper" targetProject="${project.mapper.path}">
      <!-- 是否在当前路径下新加一层schema,eg：fase路径com.oop.eksp.user.model， true:com.oop.eksp.user.model.[schemaName] -->
      <property pascalName="enableSubPackages" value="false"/>
    </sqlMapGenerator>
    <!-- 生成mapxml对应client，也就是接口dao -->
    <javaClientGenerator targetPackage="${project.package}.dao.basic" targetProject="${project.path}" type="XMLMAPPER">
      <!-- 是否在当前路径下新加一层schema,eg：fase路径com.oop.eksp.user.model， true:com.oop.eksp.user.model.[schemaName] -->
      <property pascalName="enableSubPackages" value="false"/>
    </javaClientGenerator>
    <!-- 配置表信息 -->
    <table tableName="order"/>
  </context>
</generatorConfiguration>
